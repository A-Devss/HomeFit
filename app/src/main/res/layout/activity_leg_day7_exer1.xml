<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".leg_day_7_exer1"
    android:background="@drawable/gradient"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_exercise"
            android:orientation="vertical"
            >
            <pl.droidsonroids.gif.GifImageView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:src="@drawable/curtsy_lunges"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Curtsy Lunges"
                android:layout_marginTop="10dp"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="(16 reps)"
                android:textColor="@color/red"
                android:textSize="22sp"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cursty_lunges"
                android:textSize="14sp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"/>

            <Button
                android:id="@+id/leg_d7_btn_next1"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Next"
                android:textAllCaps="false"
                android:layout_marginTop="50dp"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:background="@drawable/ripple_effect_buton"
                android:layout_gravity="center_horizontal"

                />
            <TextView
                android:id="@+id/leg_d7_btn_back1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_gravity="bottom|center"
                />
        </LinearLayout>
    </ScrollView>


</RelativeLayout>